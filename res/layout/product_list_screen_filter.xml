<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/filter"
    android:layout_height="40dp"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/type_llayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/type_tv"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="类别" />

        <ImageView
            android:id="@+id/type_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/un_select_type" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/brand_llayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

       <TextView
           android:id="@+id/brand_tv"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="品牌" />

        <ImageView
            android:id="@+id/brand_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/un_select_type" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/screen_llayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

       <TextView
           android:id="@+id/screen_tv"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="筛选" />

        <ImageView
            android:id="@+id/screen_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unselect_screen" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sort_llayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sort_tv"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="排序" />

        <ImageView
             android:id="@+id/sort_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/un_select_sort" />
    </LinearLayout>
    

</LinearLayout>